/*
 * this file defines lint rules that override default lint rules for js source files
 * you can see a list of default rules and descriptions/purposes for each here:
 * http://eslint.org/docs/rules/
 */

{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "jsx": true,
    "modules": true,
    "spread": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "templateStrings": true
  },
  "rules": {
    "comma-dangle": 0,
    "no-bitwise": 2,
    "camelcase": 2,
    "curly": 2,
    "eqeqeq": [2, "smart"],
    "no-cond-assign": 2,
    "no-extend-native": 2,
    "wrap-iife": [2, "any"],
//    "indent": [2, "spaces", 4],
    "vars-on-top": 2,
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "max-depth": [2, 4],
    "no-eq-null": 0,
    "brace-style": 2,
    "space-after-keywords": 2,
    "space-before-blocks": 2,
    "space-in-brackets": 0,
    "global-strict": 0,
    "strict": [2, "global"],
    "max-len": [2, 110],
    "no-underscore-dangle": 0,
    "file_num_lines": [2, 500],
    "props_spread_order": 2,

    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 2,
    "react/self-closing-comp": 2
  },
  "env": {
    "browser": true
  },
  "plugins": [ "react" ]
}
